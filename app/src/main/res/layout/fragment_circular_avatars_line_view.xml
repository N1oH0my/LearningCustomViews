<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CD000000"
    tools:context=".fragments.CircularAvatarsLineFragmentView">

    <com.surf2024.learningcustomviews.features.avatars_line_view.AvatarsLineView
        android:id="@+id/custom_image_card_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:avatar_size="80dp"
        app:avatars_margin="120dp"
        app:avatars_radius="30dp"
        app:max_avatars="4"
        app:avatars_border_color="#9051F8"
        app:avatars_border_width="5dp"
        app:text_size="26sp">
    </com.surf2024.learningcustomviews.features.avatars_line_view.AvatarsLineView>

</LinearLayout>