<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CircularAvatarsLineFragmentView">

    <com.surf2024.learningcustomviews.features.avatars_line_view.AvatarsLineView
        android:id="@+id/custom_image_card_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:avatar_size="100dp"
        app:avatars_margin="26dp"
        app:avatars_radius="50dp"
        app:max_avatars="5"
        app:text_size="16sp">
    </com.surf2024.learningcustomviews.features.avatars_line_view.AvatarsLineView>

</LinearLayout>